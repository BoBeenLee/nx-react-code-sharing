{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@nx-react-code-sharing/sdk": ["../../libs/sdk/src/index.ts"],
      "@nx-react-code-sharing/shared-apis": [
        "../../libs/shared/apis/src/index.ts"
      ],
      "@nx-react-code-sharing/shared-libs": [
        "../../libs/shared/libs/src/index.ts"
      ],
      "@nx-react-code-sharing/shared-styles": [
        "../../libs/shared/styles/src/index.ts"
      ],
      "@nx-react-code-sharing/shared-ui-components": [
        "../../libs/shared/ui-components/src/index.ts"
      ],
      "@nx-react-code-sharing/shared-utils": [
        "../../libs/shared/utils/src/index.ts"
      ],
      "@nx-react-code-sharing/shared/hooks": [
        "../../libs/shared/hooks/src/index.ts"
      ],
      "@nx-react-code-sharing/shared/stores": [
        "../../libs/shared/stores/src/index.ts"
      ]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
